[alias]
  amend = duet-commit --amend -CHEAD
  reset-author = duet-commit --amend --reset-author -CHEAD
	st = status
	di = diff
  co = checkout
  ci = duet-commit
	br = branch
	sta = stash
	llog = log --date=local
	flog = log --pretty=fuller --decorate
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	lol = log --graph --decorate --oneline
	lola = log --graph --decorate --oneline --all
	blog = log origin/master... --left-right
	ds = diff --staged
	fixup = duet-commit --fixup
	squash = duet-commit --squash
	unstage = reset HEAD
	rum = rebase master@{u}
[core]
	pager = less -FXRS -x2
	excludesfile = /Users/pivotal/.gitignore_global
[apply]
	whitespace = nowarn
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[branch]
	autosetupmerge = true
[rebase]
	autosquash = true
[push]
	default = simple
